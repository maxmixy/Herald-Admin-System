<script>
  function showTable(tableType) {
    var content = document.getElementById("content");
    var html = "";

    switch (tableType) {
      case "assignment":
        html = `
          <div class="table-container">
            <h2 class="table-title">Assignment Task</h2>
            <table>
              <thead>
                <tr>
                  <th>Task Name</th>
                  <th>Status</th>
                  <th>Due Date</th>
                  <th>Ongoing</th>
                </tr>
              </thead>
              <tbody>
                <!-- Insert assignment task data here -->
                <tr>
                  <td>Task 1</td>
                  <td><input type="checkbox" value="status1"></td>
                  <td><input type="checkbox" value="dueDate1"></td>
                  <td><input type="checkbox" value="ongoing1"></td>
                </tr>
                <tr>
                  <td>Task 2</td>
                  <td><input type="checkbox" value="status2"></td>
                  <td><input type="checkbox" value="dueDate2"></td>
                  <td><input type="checkbox" value="ongoing2"></td>
                </tr>
              </tbody>
            </table>
          </div>
        `;
        break;
      case "assigned":
        html = `
          <div class="table-container">
            <h2 class="table-title">Assigned Tasks</h2>
            <button style="float: right;" onclick="addTask()">Add Task</button>
            <table>
              <thead>
                <tr>
                  <th colspan="5">Assigned Task Table</th>
                </tr>
              </thead>
              <tbody>
                <!-- Insert assigned task data here -->
                <!-- Assuming 10 rows and 5 columns as per your instruction -->
                <!-- You can adjust as needed -->
                <tr>
                  <td>Task 1</td>
                  <td>Task 2</td>
                  <td>Task 3</td>
                  <td>Task 4</td>
                  <td>Task 5</td>
                </tr>
                <tr>
                  <td>Task 6</td>
                  <td>Task 7</td>
                  <td>Task 8</td>
                  <td>Task 9</td>
                  <td>Task 10</td>
                </tr>
              </tbody>
            </table>
          </div>
        `;
        break;
      case "progress":
        html = `
          <!-- Progress overview table code here -->
        `;
        break;
    }

    content.innerHTML = html;
  }

  function addTask() {
    // Functionality to add a task goes here
    alert("Task added!");
  }
</script>

